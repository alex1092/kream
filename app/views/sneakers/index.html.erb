<p id="notice"><%= notice %></p>
<h1 class='display-4 mt-5 m-3'>Sneakers</h1>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
    <% @sneakers.each do |sneaker| %>
      <div class="col-md-4">
        <div class="card h-100">
          <%= link_to sneaker do%>
            <%= image_tag sneaker.picture, class: 'card-img-top ', width: 300 if sneaker.picture.attached?%>
          <%end%>
          <div class="card-body">
            <h5 class="card-title"> <%= sneaker.brand %> <%= sneaker.model %></h5>
            <p class="card-text">Size: <%= sneaker.size %><br>
              <%= number_to_currency sneaker.price %></p>
            <% if current_user && current_user.has_role?(:admin) || current_user && current_user.id == sneaker.user_id %>
              <%= link_to 'Edit', edit_sneaker_path(sneaker) %>
              <%= link_to 'Destroy', sneaker, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
