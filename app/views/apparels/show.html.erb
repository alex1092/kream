<div class="container mt-5">
  <p id="notice"><%= notice %></p>
  <div class="row justify-content-center">
    <div class="col-3 align-self-center">
    
      <div class="card-text-center" >
        <div class="card-body">
          <h2 class="card-title"><%= @apparel.brand %></h5>
          <p class="card-text"><%= @apparel.model %></p>
          <p class="card-text">Size: <%= @apparel.size %></p>
          <p class="card-text">Vendor: <%= @apparel.user.username %></p>
          <p class="card-text"> <%= number_to_currency @apparel.price %></p>
          <% if current_user && current_user.has_role?(:admin) || current_user && current_user.id == @apparel.user_id %>
            <p class="card-text"><%= link_to 'Edit', edit_apparel_path(@apparel) %> </p>
          <%end%>
        </div>
        <a href="#" class="btn btn-primary">Buy Now</a>
<p class='pt-3'><%= link_to 'Back', apparels_path %></p>
      </div>
    </div>
    <div class="col-4">
      <%= image_tag @apparel.picture, class: 'img-thumbnail bopx', width: 350 if @apparel.picture.attached?%>
    </div>
  </div>
</div>


